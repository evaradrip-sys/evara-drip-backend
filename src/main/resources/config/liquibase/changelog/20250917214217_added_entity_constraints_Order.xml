        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"
                                 />
    </changeSet>
</databaseChangeLog>
